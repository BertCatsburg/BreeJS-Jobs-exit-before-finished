{
    "compilerOptions": {
        "module": "CommonJS",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2019",
        "sourceMap": true,
        "outDir": "./build",
        "baseUrl": "./src",
        "incremental": true,
        "skipLibCheck": true,
        "allowJs": true,
        "moduleResolution": "node",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
    },
    "exclude": ["node_modules"]
}
